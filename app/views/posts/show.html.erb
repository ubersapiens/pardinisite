<div class="container-fluid" id="header-container">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <h1><%= @post.title %></h1>
        <h2><%= @post.created_at.strftime("%d %b. %Y") %></h2>
        <br>
      </div>
    </div>
  </div>
</div>

<div class="container-fluid" id="blog-show-container">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <p><%= simple_format(@post.body) %></p>
        <br>
        <p><%= link_to 'Back', posts_path %></p>
        <br>
      </div>
    </div>
  </div>
</div>


<div class="container-fluid" id="header-container">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <h1>Our latest articles</h1>
        <h2>We write about web, monetisation and sometimes cycling .</h2>
        <br>
      </div>
    </div>
  </div>
</div>

<div class="container-fluid" id="blog-index-container">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <table>

          <tbody>
            <% @posts.each do |post| %>
              <tr>
                <td><%= post.title %></td>
                <td><%= post.body %></td>
                <td><%= link_to 'Show', post %></td>
                <td><%= link_to 'Edit', edit_post_path(post) %></td>
                <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <br>
      </div>
    </div>
  </div>
</div>


